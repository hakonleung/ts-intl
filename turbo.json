{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["$VSCODE_PID"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "$VSCODE_PID"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "watch": {
      // https://github.com/vercel/turborepo/issues/986#issuecomment-1091384632
      "cache": false
    },
    "ts-check": {},
    "test": {
      "outputs": []
    }
  }
}
